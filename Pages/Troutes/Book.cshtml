@page
@model TruckLoadingApp.Pages.Troutes.BookModel

<h2>Book Route</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}

<form method="post">
    <div class="form-group">
        <label>Origin</label>
        <input class="form-control" value="@Model.Route.Origin" readonly />
    </div>
    <div class="form-group">
        <label>Destination</label>
        <input class="form-control" value="@Model.Route.Destination" readonly />
    </div>
    <div class="form-group">
        <label>Available Date</label>
        <input class="form-control" value="@Model.Route.AvailableDate.ToShortDateString()" readonly />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" readonly>@Model.Route.Description</textarea>
    </div>
    @if (!Model.IsBooked)
    {
        <button type="submit" class="btn btn-primary">Confirm Booking</button>
    }
    else
    {
        <button type="button" class="btn btn-secondary" disabled>Booked</button>
    }
</form>

<a asp-page="./Index" class="btn btn-secondary mt-3">Back to List</a>