@page
@model TruckLoadingApp.Pages.Troutes.BookedTrucksModel
@{
    ViewData["Title"] = "Booked Trucks";
}
<h1>Booked Trucks</h1>
<table class="table">
    <thead>
        <tr>
            <th>Origin</th>
            <th>Destination</th>
            <th>Available Date</th>
            <th>Driver</th>
            <th>Description</th>
            <th>Booking Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bookedTruck in Model.BookedTrucks)
        {
            <tr>
                <td>@bookedTruck.Booking.Route.Origin</td>
                <td>@bookedTruck.Booking.Route.Destination</td>
                <td>@bookedTruck.Booking.Route.AvailableDate.ToShortDateString()</td>
                <td>@bookedTruck.DriverFirstName</td>
                <td>@bookedTruck.Booking.Route.Description</td>
                <td>@bookedTruck.Booking.BookingDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="./Index" class="btn btn-secondary">Back to Available Trucks</a>